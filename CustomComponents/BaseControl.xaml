<UserControl x:Class="CustomComponents.BaseControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CustomComponents"
             mc:Ignorable="d" d:DesignWidth="260" Height="110">
    <Grid>
        <Canvas HorizontalAlignment="Left" Height="35" Margin="0,80,0,0" VerticalAlignment="Top" Width="260">
            <Button x:Name="Comfirm" Content="确定" Canvas.Left="5" Width="60" Height="20" Canvas.Top="5"/>
            <Button x:Name="No" Content="取消" Canvas.Left="80" Width="60" Height="20" Canvas.Top="5"/>
        </Canvas>
        <Canvas x:Name="Mainbox" HorizontalAlignment="Left" Height="50" Margin="0,30,0,0" VerticalAlignment="Top" Width="260"/>
        <Canvas x:Name="TextArea" HorizontalAlignment="Left" Height="30" VerticalAlignment="Top" Width="260"/>
    </Grid>
</UserControl>
